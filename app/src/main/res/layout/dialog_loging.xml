<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:layout_height="match_parent">

    <TextView
        android:text="用户名"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_tv_name"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/dialog_tv_name"
        android:text="密码"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:gravity="left"
        android:id="@+id/dialog_tv_password"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/dialog_et_username"
        android:layout_toRightOf="@id/dialog_tv_name"
        android:hint="UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/dialog_et_password"
        android:layout_below="@id/dialog_tv_name"
        android:hint="PassWord"
        android:layout_toRightOf="@id/dialog_tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="登录"
        android:id="@+id/dialog_bt_loging"
        android:layout_below="@id/dialog_et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="注册"
        android:id="@+id/dialog_bt_register"
        android:layout_toRightOf="@id/dialog_bt_loging"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/dialog_et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>