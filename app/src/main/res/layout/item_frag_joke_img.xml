<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"

    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true">


        <ImageView
            android:transitionName="joke_image"
            android:id="@+id/iv_item_frag_joke_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#93e79d"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_item_frag_joke_img"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:transitionName="joke_text"
            android:text="更健康好久感觉哈哈哈环境监控和 "
            android:textColor="#8b807b7b"
            android:layout_gravity="bottom"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_frag_joke_img_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#95898888"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom|right"
            android:layout_below="@id/iv_item_frag_joke_img"
            android:text="20133-121-323-4-" />
</android.support.v7.widget.CardView>